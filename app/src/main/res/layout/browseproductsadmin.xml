<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CustomerBrowseProducts"
    android:id="@+id/idRLBSheet">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:onClick="BackArrowA"
        android:src="@drawable/ic_back"
        app:tint="@color/text_or_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVProducts"
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:layout_below="@+id/imageBack"
        android:layout_marginTop="-4dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idAddFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/background1"
        android:src="@drawable/ic_add_2"
        app:tint="@color/white" />


</RelativeLayout>